<h1 class="text-center">Apartments Available</h1>
<div class="d-flex flex-wrap">
  <% @flats.each do |flat| %>
    <div class="card m-2" style="width: 18rem;">
    <img class="card-img-top" src="<%= flat.image_url %>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= flat.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
      <p class="card-text">
        â‚¬<%= flat.price_per_night %> |
        <i class="fas fa-user-friends"></i><%= flat.number_of_guests %> Guests
      <p>
      <%= link_to "More Info", flat_path(flat), class: 'card-link' %>
      <%= link_to "Edit", edit_flat_path(flat), class: 'card-link text-warning' %>
      <%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: 'Are you sure? ' }, class: 'card-link text-danger' %>
    </div>
  </div>
<% end %>
</div>
